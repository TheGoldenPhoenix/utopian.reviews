<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>{{ title }}</title>
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet"
        href="https://xzor.xyz/ipfs/QmVn6EcxW4gqRZjW9b48yJ6StY4rwRphG9AZp1FxYSLdWY/font-awesome/css/font-awesome.min.css">
  <link rel="stylesheet" href="/stylesheets/me.css">

  <link rel="stylesheet" href="/stylesheets/me_blue.css">

    {#<link rel="stylesheet" href="/stylesheets/style.css">#}

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->

  <!-- Google Font -->
  <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <header class="main-header">
    <!-- Logo -->
    <a href="/" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>U.R</b></span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>Utopian</b>Reviews</span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>

      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">

          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <img src="https://img.busy.org/@{{ steem.name }}" class="user-image" alt="User Image">
              <span class="hidden-xs">{{ steem.name }}</span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header">
                <img src="https://img.busy.org/@{{ steem.name }}" class="img-circle" alt="User Image">

                <p>
                    {{ steem.name }}

                  <small>Steem member since {{ steem.created|date("m.Y") }}</small>
                </p>
              </li>
              <!-- Menu Body -->
              <li class="user-body">
                <div class="row">
                  <div class="col-xs-12 text-center">
                      {{ steem.account.json_metadata.profile.about }}
                  </div>
                </div>
                <!-- /.row -->
              </li>
              <!-- Menu Footer-->
              <li class="user-footer">
                <div class="pull-left">
                  <a href="https://utopian.io/@{{ steem.name }}" target="_blank"
                     class="btn btn-default btn-flat">Utopian Profile</a>
                </div>
                <div class="pull-right">
                  <a href="/auth/destroy" class="btn btn-default btn-flat">Sign out</a>
                </div>
              </li>
            </ul>
          </li>

        </ul>
      </div>
    </nav>
  </header>
  <!-- Left side column. contains the logo and sidebar -->
  <aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <!-- Sidebar user panel -->
      <div class="user-panel">
        <div class="pull-left image">
          <img src="https://img.busy.org/@{{ steem.name }}" class="img-circle" alt="User Image">
        </div>
        <div class="pull-left info">
          <p>Welcome</p>
            {{ steem.name }}
        </div>
      </div>

      <!-- /.search form -->
      <!-- sidebar menu: : style can be found in sidebar.less -->
      {% include 'main_menu.twig' with {'active':active, 'team_members': team_members} %}
    </section>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Overview
        <small>Control panel</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      {% block content %}{% endblock %}

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
    <div class="pull-right hidden-xs">
      <a title="View on Github" href="https://github.com/wehmoen/utopian.reviews" target="_blank"><i
                class="fa fa-github"></i></a>
      <b>Version</b> 1.0.0 beta
    </div>
    <strong>utopian.reviews is a project by <a href="https://utopian.io/@wehmoen">@wehmoen</a>.</strong>
  </footer>

  <!-- /.control-sidebar -->
  <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>
</div>
<!-- ./wrapper -->

<!-- jQuery 3 -->
<script src="https://xzor.xyz/ipfs/QmVn6EcxW4gqRZjW9b48yJ6StY4rwRphG9AZp1FxYSLdWY/jquery/jquery.min.js"></script>

<script src="https://xzor.xyz/ipfs/QmVn6EcxW4gqRZjW9b48yJ6StY4rwRphG9AZp1FxYSLdWY/bootstrap/js/bootstrap.bundle.min.js"></script>

<script src="/javascripts/app.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
